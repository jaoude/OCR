            if (typeof (Yamli) == 'object' && Yamli.init()) {
                Yamli.yamlify('search');
            }
        </script>


</head>
<body>

    <input type="button" value="Upload Pages" id="idUploadPages" />
    
    <form class="example">
    <input id='myInput' @*onkeyup='searchTable()'*@ type='text' name="search" placeholder="Search...">
    <button id="search"><i class="fa fa-search"></i></button>
    <br />
    @*<div id="myResultTable">
